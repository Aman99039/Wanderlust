<% if (success.length) { %>
    <div class="alert alert-success alert-dismissible fade show col-lg-4 offset-lg-4" role="alert">
        <h6>
            <%= success %>
        </h6>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

        <% if (error.length) { %>
            <div class="alert alert-danger alert-dismissible fade show col-4 offset-4" role="alert">
                <h6>
                    <%= error %>
                </h6>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <% } %>
